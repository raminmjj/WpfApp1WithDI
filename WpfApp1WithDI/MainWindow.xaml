<Window x:Class="WpfApp1WithDI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1WithDI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Menu Grid.Row="0" Grid.Column="0">
            <MenuItem Header = "Help" HorizontalAlignment="Center" VerticalAlignment="Center">
                <MenuItem Name="about" Header = "about t" HorizontalAlignment = "Stretch"/>
            </MenuItem>
        </Menu>

        <Frame x:Name="mainFrame" Grid.Row="1" Grid.Column="0" Source="Home.xaml" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
